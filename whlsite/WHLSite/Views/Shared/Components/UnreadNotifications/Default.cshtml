@model UserNotificationsViewModel
@{
  var title = $"{Model.Count} unread notifications";
}
<li>
  <a class="nav-link fw-semibold whl-nav-link-NOTIFICATIONS" asp-area="" asp-controller="Profile" asp-action="Notifications"
    title="View Notifications" aria-label="View Notifications"><i class="fa-solid fa-bell"></i>
    @if (Model.Count > 0)
    {
      <span class="badge bg-light text-dark" title="@title">@Model.Count</span>
    }
  </a>
</li>