@model HousingApplicationViewModel
<div class="modal fade" id="commentEditorModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="commentEditorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="commentEditorModalLabel"><span id="whl-title-comment-action">Add Comment</span></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="text-left">
          <form enctype="multipart/form-data" action="" method="post" novalidate="novalidate">
            <div id="divSaveCommentErrorMessage" style="display: none;">
              <h6 class="text-danger"><i class="fa-solid fa-triangle-exclamation"></i>&nbsp;Error</h6>
              <p id="lblSaveCommentErrorMessage">Failed to save comment</p>
              <hr />
            </div>

            <input type="hidden" id="hidCommentApplicationId" name="hidCommentApplicationId" value="@Model.ApplicationId" />

            <div class="row mb-3">
              <div class="col-xs-12">
                <label class="form-label small fw-bolder" for="txtComment">Comment <span class="fw-bold text-danger">*</span></label><br />
                <textarea rows="3" class="form-control form-control-sm whl-formfield-comments" placeholder="Enter Comment" maxlength="1000" id="txtComment" name="txtComment"></textarea>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary whl-action-save-comment">Save</button>
        <label class="whl-label-save-comment-inprogress">Saving&hellip;</label>
      </div>
    </div>
  </div>
</div>