@model HouseholdMemberViewModel

<div class="card border-0 border-bottom mb-3 h-100">
  <div class="card-body">
    <div class="card-title">
      @if (Model.RelationTypeCd == "SELF")
      {
        <span class="fs-5 fw-semibold text-primary">Self</span><br />
        <span class="text-secondary">&nbsp;</span>
      }
      else
      {
        if (!string.IsNullOrEmpty(Model.DisplayName))
        {
          <span class="fs-5 fw-semibold text-dark">@Model.DisplayName</span>
        }
        else
        {
          <span class="fs-5 fw-light text-secondary">Not Specified</span>
        }
        <br />
        <small class="text-secondary">@Model.DisplayRelation</small>
      }
    </div>
    <div class="card-text">
      <div class="row mb-3">
        <div class="col-xs-12 col-md-4">
          <small class="border-bottom">Total Annual Gross Income</small><br />
          <span class="fs-5 fw-semibold text-dark">@Model.IncomeValueAmt.ToString("C0")</span>
        </div>
        <div class="col-xs-12 col-md-4">
          <small class="border-bottom">Total Assets</small><br />
          <span class="fs-5 fw-semibold text-dark">@Model.AssetValueAmt.ToString("C0")</span>
        </div>
        <div class="col-xs-12 col-md-4">
          <small class="border-bottom">Real Estate</small><br />
          <span class="fs-5 fw-semibold text-dark">@Model.RealEstateValueAmt.ToString("C0")</span>
        </div>
      </div>
    </div>
    @if (Model.RelationTypeCd != "SELF")
    {
      <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Household"
        asp-action="EditMember" asp-route-memberId="@Model.MemberId" title="Edit member information"
        aria-label="Edit member information" data-memberid="@Model.MemberId">Edit</a>
      <a href="javascript:void(0);" class="btn btn-sm btn-outline-secondary whl-action-deletemember"
        title="Remove member from household" aria-label="Remove member from household"
        data-memberid="@Model.MemberId" data-membername="@Model.DisplayName">Remove</a>
    }
  </div>
</div>